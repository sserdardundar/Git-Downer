{
  "manifest_version": 3,
  "name": "GitHub Directory Downloader",
  "version": "1.0",
  "description": "Adds a button to download specific directories from GitHub repositories.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
